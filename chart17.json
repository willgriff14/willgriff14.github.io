{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    
  "config":{
    "background": "#3a3a3a00",
    "view": {
      "stroke": "transparent"
  }
  },
  
    "title": {
      "text": "ONS and Statista Data",
      "subtitle":"20% of UK jobs are not green",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "subtitleColor": "white",
      "anchor": "start",
      "color": "white"
    },
    
     "data": {
      "url": "https://raw.githubusercontent.com/willgriff14/willgriff14.github.io/main/green%20jobs.csv",
      "format": {"type": "csv"}
    },
    
    
    "height": 300,
    "width": 310,
     
  "encoding": {
    "x": {"timeUnit": "yearmonthdate", "field": "Date", "axis": {"labelColor": "white", "titleColor": "white"}},
    "tooltip": [
      {"timeUnit": "yearmonthdate", "field": "Date"},
      {"field": "Total Employment", "type": "quantitative"},
      {"field": "Estimate", "type": "quantitative"}
    ]
  },
  "layer": [{
    "mark": {"type": "area", "color": "pink"},
    "encoding": {
      "y": {"field": "Total Employment", "type": "quantitative"}
    }
  }, {
    "mark": {"type": "area", "color": "#05f7ff"},
    "encoding": {
      "y": {"field": "Estimate", "type": "quantitative", "axis": {"labelColor": "white", "titleColor": "white"}}
    }
  }, {
    "mark": "rule",
    "params": [{
      "name": "hover",
      "select": {"type": "point", "on": "mouseover"}
    }],
    "encoding": {
      "color": {
        "condition": {
          "param": "hover",
          "empty": false,
          "value": "white"
        },
        "value": "transparent"
      }
    }
  }],
  "config": {"axisY": {"minExtent": 30}}
}
