{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "config":{
    "background": "#3a3a3a00",
    "view": {
      "stroke": "transparent"
  }
  },  

  "title": {
    "text": "New Covid-19 Cases By Area",
    "subtitle":"Hounslow, Havant and Trafford New Daily Covid-19 Casese",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "subtitleColor": "white",
    "anchor": "start",
    "color": "white"
  },
  
   "data": {
    "url": "https://api.coronavirus.data.gov.uk/v2/data?areaType=ltla&metric=newCasesByPublishDateRollingRate&format=csv",
    "format": {"type": "csv"}
  },

   "transform":[
      
      {"filter": {
        "field": "areaName", 
        "oneOf": ["Hounslow", "Havant", "Trafford"]}
        }


    ],
  
  
  "height": 300,
  "width": 310,
   
  "mark": {"type": "line", "point": false},
 
  "encoding": {

    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false, "labelColor": "white"}
    },

    "y": {
      "field": "newCasesByPublishDateRollingRate",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false, "labelColor": "white"}
    },

    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "pastel1"},
      "title": "AREA",
      "legend": {
        "orient": "top-left", 
        "fillColor": "#FcFdFd00",
        "labelColor": "white",
        "titleColor": "white"}
    }
}
}