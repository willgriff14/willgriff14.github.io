{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

"config":{
  "background": "#3a3a3a00",
  "view": {
    "stroke": "transparent"
}
},

  "title": {
    "text": "VIX Index",
    "subtitle":"Source: Yahoo Finance",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "subtitleColor": "white",
    "anchor": "start",
    "color": "white"
  },
  
   "data": {
    "url": "https://raw.githubusercontent.com/willgriff14/willgriff14.github.io/main/%5EVIX.csv",
    "format": {"type": "csv"}
  },
  
  
  "height": 300,
  "width": 310,
   
  "mark": {"type": "area", "point": false, "color":"#05f7ff"},
 
  "encoding": {

    "x": {
      "field": "Date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false,
      "labelColor": "white"}
    },

    "y": {
      "field": "Close",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false,
      "labelColor": "white"}
    },"tooltip": {"field": "Close", "type": "quantitative"},

    "color": {
      "type": "nominal",
      "scale": {"scheme": "set1"}
    }
}
}